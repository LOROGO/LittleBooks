                app:layout_constraintTop_toBottomOf="@+id/zaner"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/autor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Autor:"
                android:textStyle="italic"
                android:textColor="@color/white"
